@model SistemaImbrino.Models.BANCO

@{
	Layout = "~/Views/Shared/_Layout.cshtml";
	ViewBag.Title = "Bancos";
	ViewBag.nameView = "Banco";
}



<div class="row">
	@Html.AntiForgeryToken()


	<div class="col-xs-12 col-sm-6 col-lg-4 ">
