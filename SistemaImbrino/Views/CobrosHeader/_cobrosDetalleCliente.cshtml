@*@model List<SistemaImbrino.Models.View_cobrosHeader>*@
@model SistemaImbrino.Models.View_cobrosHeader
<table id="tbl_DetalleCuotas" class="table table-bordered">
	<thead>
		<tr>
			<th># Fin</th>
			<th class="text-center">Total Cuotas</th>
			<th class="text-center">Balance Total</th>
			<th class="text-center">Capital total</th>
			<th class="text-center">Interes total</th>
			<th class="text-center">Mora total</th>
		</tr>
	</thead>
	<tbody>
		@*@foreach (var CuotasVen in (List<SistemaImbrino.Models.View_cobrosHeader>)Model)*@
		@foreach (var CuotasVen in SistemaImbrino.Controllers.BaseController.CobrosHeader(Model.cliente)) 
			{

		<tr role = "row">
			<td><a class="control-label a">@CuotasVen.cliente </a>@*<a href = "@Url.Action("index", "Cobros", new { FinID = CuotasVen.cliente  })" class="control-label"> @CuotasVen.cliente</a>*@</td>
			<td class="text-center">@CuotasVen.CountT</td>
			<td class="text-center">@CustomHtmlHelper.Helpers.HtmlExtensions.NumberFormat(CuotasVen.montoTotal)</td>
			<td class="text-center">@CustomHtmlHelper.Helpers.HtmlExtensions.NumberFormat(CuotasVen.capitalTotal)</td>
			<td class="text-center">@CustomHtmlHelper.Helpers.HtmlExtensions.NumberFormat(CuotasVen.interesTotal)</td>
			<td class="text-center">@CustomHtmlHelper.Helpers.HtmlExtensions.NumberFormat(CuotasVen.moraTotal)</td>
		</tr>
	}
	</tbody>
</table>