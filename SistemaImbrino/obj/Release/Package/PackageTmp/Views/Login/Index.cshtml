
@{
	Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>@ViewBag.Title</title>
	@Styles.Render("~/Content/css")
	@Scripts.Render("~/bundles/modernizr")
	<style>
		body {
			color: #41362f;
			font-family: 'Open Sans','Helvetica Neue',Helvetica,Arial,sans-serif;
			font-style: normal;
			font-weight: 400;
			line-height: 1.36;
			font-size: 1.4rem;
			background-color: #f5f5f5;
			min-height: 100%;
			min-width: 102.4rem;
			margin-top: 2%;
		}
	</style>

</head>
<body class="adminhtml-auth-login page-layout-admin-login">

	<section class="page-wrapper">
		<header class="login-header">
			<a href="" data-edition="Enterprise" class="logo">
				<img class="logo-img" style="width:100%" src="~/Content/img/logo.jpg" alt="Sistema imbrino" title="Sistema imbrino">
			</a>
		</header><div class="login-content">
			<form method="post" action="@Url.Action("Login","Login")" id="login-form" autocomplete="off">
				<fieldset class="admin__fieldset">
					<legend class="admin__legend">
						<span>Bienvenido, por favor logeate</span>
					</legend><br>
					<input name="form_key" type="hidden" value="CdECcyKqvyCYnmLO">
					<div class="admin__field _required field-username">
						<label for="username" class="admin__field-label">
							<span>Username</span>
						</label>
						<div class="admin__field-control">
							<input id="username" name="username" class="form-control" type="text"  autofocus="" value="" required placeholder="user name" autocomplete="off">
						</div>
					</div>
					<div class="admin__field _required field-password">
						<label for="login">
							<span>Contraseña</span>
						</label>
						<div>
							<input id="password" name="password" class="form-control" type="password" required placeholder="password" autocomplete="new-password">
						</div>
					</div>
					<div class="form-actions" style="padding-top:10px">
						<div class="actions">
							<input type="submit" value="Iniciar sesion" class="btn-defaultColorLite btn" />
						</div>
					</div>
				</fieldset>
			</form>
		</div><footer class="login-footer">

			Copyright © 2021 Livingston Lyttle Reynoso. All rights reserved.
		</footer>
	</section>

	@Scripts.Render("~/bundles/jquery")
	@Scripts.Render("~/bundles/bootstrap")
	@Scripts.Render("~/bundles/scripts")
	<script type="text/javascript">
		var altoTotal = $(window).height();
		altoTotal = altoTotal / 2;
		$("#firtLayout").css("min-height", altoTotal);
		$("#SecondLayout").css("min-height", altoTotal);
		var altoLogin = (altoTotal + (altoTotal / 1.5)) * -1;
		$("#container-login").css("margin-top", altoLogin);
		$("#container-login").css("min-height", altoTotal + 100);
	</script>

</body>
</html>


